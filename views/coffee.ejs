<!-- views/coffee.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Coffees</title>
  </head>
  <body>
    <h2>All Coffees</h2>
    <ul>
      <% coffees.forEach(coffee => { %>
      <li>
        <a href="/coffees/<%= coffee.id %>"> <%= coffee.name %> </a> -
        $<%=coffee.price %>

        <form
          action="/coffees/<%= coffee.id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button type="submit">Delete</button>
        </form>

        <a href="/coffees/<%= coffee.id %>/edit">Edit</a>
      </li>
      <% }); %>
    </ul>

    <a href="/coffees/new">Add New Coffee</a>
    <a href="/">Main Page</a>
  </body>
</html>
